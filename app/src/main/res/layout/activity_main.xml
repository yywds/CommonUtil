<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f2"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tab_bottom"
        android:layout_marginBottom="-2dp"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tab_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/tab_rel_home_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_home_s"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/danci2" />

                <TextView
                    android:id="@+id/tv_shouye_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_home_s"
                    android:text="单词"
                    android:textColor="#0099FF"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_rel_recommend_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_tuijie_s"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/xunlian1" />

                <TextView
                    android:id="@+id/tv_tuijie_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_tuijie_s"
                    android:text="训练"
                    android:textColor="#666666"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_rel_discuss_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_luntan_s"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/wode1" />

                <TextView

                    android:id="@+id/tv_luntan_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_luntan_s"
                    android:text="我的"
                    android:textColor="#666666"
                    android:textSize="15dp" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>